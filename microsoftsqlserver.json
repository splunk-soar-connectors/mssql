                    "required": false,
                    "primary": false,
                    "order": 1
                },
                "no_commit": {
                    "description": "Do not commit changes to the Database",
                    "data_type": "boolean",
                    "required": false,
                    "primary": false,
                    "order": 2
                },
                "datetime_to_iso8601": {
                    "description": "Convert column types of datetime to iso8601",
                    "data_type": "boolean",
                    "required": false,
                    "primary": false,
                    "default": false,
                    "order": 3
                },
                "default_to_string": {
                    "description": "Convert any non-standard column types to string; ie. datetime",
                    "data_type": "boolean",
